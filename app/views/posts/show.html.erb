<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @post.title%>
      </p>
      <%= link_to "by #{@post.user.name}", root_path, class: :prototype__user %>
      <% if user_signed_in? && current_user.id == @post.user_id %>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_post_path(@post.id), class: :prototype__btn %>
          <%= link_to "削除する", post_path(@post.id), method: :delete, class: :prototype__btn %>
        </div>
      <% end %>
      <div class="prototype__image">
        <%= image_tag @post.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">URL</p>
          <p class="detail__message">
            <%= @post.url %>
          </p>
        </div>
        
      </div>
      <div class="prototype__comments">
        <% if user_signed_in? %>
          <%= form_with model: [@post, @review],local: true do |f|%>
            <div class="field">
              <%= f.label :total, "総合評価" %><br />
              <%= f.radio_button :total, '5', id:"comment_content" %>
              <%= f.label :total, "5点" %>
              <%= f.radio_button :total, '4', id:"comment_content" %>
              <%= f.label :total, "4点" %>
              <%= f.radio_button :total, '3', id:"comment_content" %>
              <%= f.label :total, "3点" %>
              <%= f.radio_button :total, '2', id:"comment_content" %>
              <%= f.label :total, "2点" %>
              <%= f.radio_button :total, '1', id:"comment_content" %>
              <%= f.label :total, "1点" %>
            </div>
            <div class="field">
              <%= f.label :concept, "世界観" %><br />
              <%= f.number_field :concept, id:"comment_content" %>
            </div>
            <div class="field">
              <%= f.label :quality, "見栄え" %><br />
              <%= f.number_field :quality, id:"comment_content" %>
            </div>
            <div class="field">
              <%= f.label :usability, "わかりやすさ" %><br />
              <%= f.number_field :usability, id:"comment_content" %>
            </div>
            <div class="field">
              <%= f.label :utility, "実用的" %><br />
              <%= f.number_field :utility, id:"comment_content" %>
            </div>
            <div class="field">
              <%= f.label :text, "コメント" %><br />
              <%= f.text_area :text, id:"comment_content" %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %>
        <% end %>

        
        <ul class="comments_lists">
          <h4>＜評価一覧＞</h4>
          <% @reviews.each do |review| %>
            <ul class="comments_list">
            <strong><%= link_to "（ #{review.user.name} ）", root_path, class: :comment_user %>
               <%= "総合評価 : #{review.total}点" %></strong><br />
               <%= "世界観 : #{review.concept}" %>
               <%= "見栄え : #{review.quality}" %>
               <%= "わかりやすさ : #{review.usability}" %>
               <%= "実用的 : #{review.utility}" %><br />

               <% unless review.text == "" %>
                <%= "コメント : #{review.text}" %>
               <% end %>
            </ul>
          <% end %>
        
        </ul>
      </div>
    </div>
  </div>
</main>
